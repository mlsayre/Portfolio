<% content_for :hidefrontblog do %>
  #front_blog {display: none}
<% end %>

<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>
  <h1 class="spacer">______</h1>
  <h4>by <%= @post.creator %></h4>

  <!--article date-->
  <p class="article-date"><%= @post.created_at.strftime("%b %d, %Y") %> | <%= @post.created_at.strftime("%l:%M%P") %></p>

  <!--article tags-->
  <p class="article-tags">
      Categories: <%= @post.category %>
  </p>

  <!--article content-->
  <p class="article-description"><strong><%= @post.summary %></strong>
  <br><br>
  <%= dat_markdown(@post.content) %>
  </p>

  <!--navigation-->
  <ul class="pager">
      <li class="previous"><%= link_to 'Prev', post_path(@post.previous_post)  if @post.previous_post %></li>
      <li class="next"><%= link_to 'Next', post_path(@post.next_post) if @post.next_post %></li>
  </ul>

<% if current_user.present? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= button_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

