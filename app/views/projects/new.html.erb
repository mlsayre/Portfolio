<h1>New project</h1>

<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :projecturl, "Project URL http://..." %><br />
    <%= f.text_field :projecturl %>
  </div>
  <div class="field">
    <%= f.label :short_desc %><br />
    <%= f.text_area :short_desc, size: "40x3" %>
  </div>
  <div class="field">
    <%= f.label :long_desc %><br />
    <%= f.text_area :long_desc %>
  </div>
  <div class="field">
    <%= f.label :projectpic_url, "Project picture URL http://..." %><br />
    <%= f.text_area :projectpic_url, size: "40x2" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

