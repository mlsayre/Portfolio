<h1>Listing comments</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Author url</th>
    <th>Author email</th>
    <th>User ip</th>
    <th>User agent</th>
    <th>Referrer</th>
    <th>Content</th>
    <th>Approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.author %></td>
    <td><%= comment.author_url %></td>
    <td><%= comment.author_email %></td>
    <td><%= comment.user_ip %></td>
    <td><%= comment.user_agent %></td>
    <td><%= comment.referrer %></td>
    <td><%= comment.content %></td>
    <td><%= comment.approved %></td>
    <td><%= link_to 'Show', [@post, post_comment_path(@comment)] %></td>
    <td><%= link_to 'Edit', edit_post_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', [@post, post_comment_path(@comment)], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

